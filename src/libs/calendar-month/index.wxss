.container {
  width: 100%;
  height: auto;
  padding: 6rpx 21rpx 40rpx 25rpx;
  font-size: 28rpx;
}

.month {
  width: 100%;
  padding: 40rpx 24rpx 54rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
  line-height: 48rpx;
}

.icon-tips {
  width: 50rpx;
  display: flex;
  justify-content: flex-end;
  flex-shrink: 0;
}

.icon-tips .iconfont {
  font-size: 32rpx;
  color: #999999;
  font-weight: 400;
}

.days-table {
  flex-wrap: wrap;
  align-content: flex-start;
}

.wid100 {
  width: 100%;
}

.calendar {
  z-index: 10000;
}

.grid-top {
  width: 96rpx;
  margin-bottom: 14rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #909399;
  line-height: 30rpx;
  margin-right: 4rpx;
}

.grid {
  /* width: 107.14rpx; */
  width: 96rpx;
  height: 96rpx;
  box-sizing: border-box;
  color: #bbbbbb;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 4rpx;
  margin-bottom: 4rpx;
  border-radius: 8rpx;
  border: 2rpx solid #f2f3f5;
  background: #f2f3f5;
}

.today {
  color: #303133 !important;
  background: #FFFFFF;
}

.grid-border0 {
  color: #ee0a24 !important;
  border-color: #ee0a24 !important;
  background: #FFFFFF;
}

.grid-border1 {
  color: #07C160 !important;
  border-color: #07C160 !important;
  background: #FFFFFF;
}

.grid-border2 {
  color: #165DFF !important;
  border-color: #165DFF !important;
  background: #FFFFFF;
}

.grid-border3 {
  background: #FFFFFF;
  color: #303133;
}

.grid-border-now {
  border: 1px solid rgba(0, 0, 0, 0.85);
  background: #FFFFFF;
}



