/* 非本月日期 */

.notCurrent {
  color: silver;
  pointer-events: none;
  visibility: hidden;
}

.notda {
  opacity: 0;
}

.enabled-item {
  color: #BDBDBD;
}

.swpier-box {
  width: 100%;
}

.arrow-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow {
  width: 170rpx;
  display: flex;
  justify-content: center;
}

.arrow .icon-right {
  font-size: 24rpx;
  font-weight: bolder;
}

.arrow-left {
  transform: rotate(180deg);
}

.flex {
  display: flex;
}

.calendar-item {
  width: 100%;
}

/* 轴向 */

.column {
  flex-direction: column;
}

/* 主轴方向 */

.m-start {
  justify-content: flex-start;
}

.m-end {
  justify-content: flex-end;
}

.m-around {
  justify-content: flex-start;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
}

.m-between {
  justify-content: space-between;
}

.m-center {
  justify-content: center;
}

/* 侧轴方向 */

.s-start {
  align-items: flex-start;
}

.s-end {
  align-items: flex-end;
}

.s-around {
  align-items: space-around;
}

.s-between {
  align-items: space-between;
}

.s-center {
  align-items: center;
}